@using EntityLayer.Concrete
@model List<ContactLocation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h2>İletişim / Lokasyon Bilgileri </h2>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>

                        <a class="">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table  table-bordered table-hover ">
                            <thead>
                                <tr>
                                    <th>#ID</th>
                                    <th>Başlık</th>
                                    <th>Başlık2</th>
                                    <th>Lokasyon</th>
                                    <th width="300">Lokasyon Resim</th>
                                    <th>Adress</th>
                                    <th>Mail</th>
                                    <th>Telefon No</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ContactLocationId</td>
                                        <td>@item.ContactTitle</td>
                                        <td>@item.ContactTitle2</td>
                                        <td width="300">@item.ContactMapLocation</td>
                                        @* <td width="500">
                                    <img class=" mb-2" src="~/AboutImage/@item.ContactMapLocation" style="width:20rem;height:20rem;" alt="image" />
                                    </td>*@
                                        <td>
                                            <iframe src="@item.ContactMapLocation" frameborder="0" style="border:0;"
                                                allowfullscreen></iframe>
                                        </td>
                                        <td>@item.ContactAdress</td>
                                        <td>@item.ContactEMail</td>
                                        <td>@item.ContactPhone</td>

                                        <td>
                                            <a href="/Admin/ContactLocation/Remove/@item.ContactLocationId" class="btn btn-danger">
                                                Sil
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/Admin/ContactLocation/Edit/@item.ContactLocationId" class="btn btn-success" data-toggle="modal"
                                           data-target="#Modal1">
                                                Düzenle
                                            </a>
                                        </td>


                                    </tr>
                                }
                            </tbody>
                        </table>

                        <!--ModalCategoryAdded-->
                        <div class="modal mt-5" id="Modal1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h2><b>İletişim / Lokasyon</b></h2>
                                    </div>
                                    <form method="post" action="/Admin/ContactLocation/Edit/" autocomplete="off" enctype="multipart/form-data">
                                        <div class="modal-body">

                                            <label><b>ID</b></label>
                                            <input type="text" name="ContactLocationId" required class="form-control" />
                                            <br />
                                            <label><b>Başlık Adı</b></label>
                                            <input type="text" name="ContactTitle" required class="form-control" />
                                            <br />
                                            <label><b>Başlık2</b></label>
                                            <input type="text" name="ContactTitle2" required class="form-control" />
                                            <br />
                                            <label><b>Lokasyon</b></label>
                                            <input type="text" name="ContactMapLocation" required class="form-control" />
                                            <br />
                                            <label><b>Adres</b></label>
                                            <input type="text" name="ContactAdress" required class="form-control" />
                                            <br />
                                            <label><b>Mail</b></label>
                                            <input type="text" name="ContactEMail" required class="form-control" />
                                            <br />
                                            <label><b>Telefon No</b></label>
                                            <input type="text" name="ContactPhone" required class="form-control" />
                                            <br />

                                            <button class="btn btn-success"> Ekle</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>


                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

