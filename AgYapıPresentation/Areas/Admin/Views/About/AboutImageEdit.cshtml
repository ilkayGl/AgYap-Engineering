@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "AboutImageEdit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- include summernote css/js -->
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>




<div class="col-12 grid-margin stretch-card ">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title"><b>Hakkımızda Sayfası Oluştur</b></h1>
            <hr class="mb-5" />
            <form class="forms-sample" asp-action="AboutImageEdit" asp-controller="About" method="post" autocomplete="off" enctype="multipart/form-data">

                <input hidden type="text" asp-for="AboutId" />

                <div class="form-group table-responsive">
                    <div class="custom-file" style="width:20rem;">
                        <input type="file" asp-for="AboutImage1" class="custom-file-input" id="customFile">
                        <label class="custom-file-label " for="customFileLang">Ana Resim Seçiniz</label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">AnaBaşlık</label>
                    <input type="text" asp-for="AboutTitle" required class="form-control" />
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Alt Başlık</label>
                    <input type="text" asp-for="AboutTitle2" required class="form-control" />
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">İçerik Kısmı</label>
                </div>
                <div class="form-group">
                    <span class="badge badge-danger"></span>
                    <textarea id="summernote" asp-for="AboutDetails"></textarea>
                </div>

                <button type="submit" class="btn btn-gradient-success mr-2">Ekle</button>
                <button class="btn btn-light" type="reset">İptal Et</button>
            </form>
        </div>
    </div>
</div>



<!--SummerNote JS-->

<script>
    $('#summernote').summernote({
        placeholder: 'Bir İçerik Girerek Başla..',
        tabsize: 2,
        height: 120,
    });
</script>

