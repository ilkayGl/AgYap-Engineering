@using EntityLayer.Concrete
@model List<About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h2>Hakkımızda</h2>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>

                        <a class="">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table  table-bordered table-hover ">
                            <thead>
                                <tr>
                                    <th>#ID</th>
                                    <th>Başlık</th>
                                    <th>Başlık2</th>
                                    <th>İçerik Kısmı</th>
                                    <th>Görsel</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.AboutId</td>
                                        <td>@item.AboutTitle</td>
                                        <td>@item.AboutTitle2</td>
                                        <td width="500">@item.AboutDetails</td>
                                        <td width="500">
                                            <img class=" mb-2" src="~/AboutImage/@item.AboutImage1" style="width:20rem;height:20rem;" alt="image" />
                                            @* <img src="~/AboutImage/@item.AboutImage1" style="width:40rem;height:20rem;" alt="image" />*@
                                            <br />

                                        <td>
                                            <a href="/Admin/About/AboutRemove/@item.AboutId" class="btn btn-danger">
                                                Sil
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/Admin/About/AboutEdit/@item.AboutId" class="btn btn-success" data-toggle="modal"
                                           data-target="#Modal1">
                                                Düzenle
                                            </a>
                                        </td>


                                    </tr>
                                }
                            </tbody>
                        </table>

                        <!--ModalCategoryAdded-->
                        <div class="modal mt-5" id="Modal1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h2><b>Hakkımda</b></h2>
                                    </div>
                                    <form method="post" action="/Admin/About/AboutImageEdit/" autocomplete="off" enctype="multipart/form-data">
                                        <div class="modal-body">

                                            <label><b>ID</b></label>
                                            <input type="text" name="AboutId" required class="form-control" />
                                            <br />
                                            <label><b>Başlık Adı</b></label>
                                            <input type="text" name="AboutTitle" required class="form-control" />
                                            <br />
                                            <label><b>Başlık2</b></label>
                                            <input type="text" name="AboutTitle2" required class="form-control" />
                                            <br />
                                            <label><b>Açıklama</b></label>
                                            <input type="text" name="AboutDetails" required class="form-control" />
                                            <br />
                                            <label><b>Görsel</b></label>
                                            <input type="file" name="AboutImage1" class="form-control">
                                            <br />
                                            <button class="btn btn-success"> Ekle</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>


                    </div>

                </div>
            </div>
        </div>
    </div>
</div>